          }}
        />
        <Typography
          sx={{
            fontSize,
            fontFamily: 'JetBrains Mono, monospace',
            color: userReaction === 'like' ? '#22c55e' : '#94a3b8',
          }}
        >
          {likes}
        </Typography>
      </Box>

      {/* Dislike button */}
      <Box
        onClick={onDislike}
        role="button"
        tabIndex={0}
        aria-label="Dislike comment"
        onKeyDown={(e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            onDislike();
          }
        }}
        sx={{
          display: 'flex',
          alignItems: 'center',
