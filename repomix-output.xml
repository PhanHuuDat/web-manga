  dislikes,
  userReaction,
  compact = false,
  onLike,
  onDislike,
}: ReactionButtonsProps) {
  const total = likes + dislikes;
  const iconSize = compact ? 12 : 14;
  const fontSize = compact ? 9 : 11;
  const padding = compact ? '2px 4px' : '4px 8px';
  const gap = compact ? 0.25 : 0.5;
